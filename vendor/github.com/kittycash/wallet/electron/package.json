{
    "name": "KittyCash",
    "productName": "KittyCash",
    "author": "KittyCash",
    "main": "src/electron-main.js",
    "version": "0.0.1",
    "description": "Kittycash wallet",
    "license": "MIT",
    "build": {
        "appId": "org.kittycash.kittycash",
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true
        },
        "mac": {
            "category": "public.app-category.productivity",
            "extraFiles": [
                {
                    "from": ".gox_output/${os}_${arch}",
                    "to": "./Resources/app"
                }
            ]
        },
        "win": {
            "target": "nsis",
            "extraFiles": [
                {
                    "from": ".gox_output/${os}_${arch}",
                    "to": "./resources/app"
                }
            ]
        },
        "linux": {
            "category": "Network",
            "extraFiles": [
                {
                    "from": ".gox_output/${os}_${arch}",
                    "to": "./resources/app"
                },
                {
                    "from": "build/icons/icon512x512.png",
                    "to": "./Resources"
                }
            ]
        },
        "files": [
            "!**/*",
            "src/**/*"
        ],
        "extraResources": [
            {
                "from": "../tabs/dist/",
                "to": "./app/dist/",
                "filter": [
                    "**/*"
                ]
            },
            {
                "from": "./kittycash/",
                "to": "./app/dist/"
            }
        ],
        "directories": {
            "output": "release"
        }
    },
    "scripts": {
        "dist-win32": "build -w --ia32 -p=never",
        "dist-win64": "build -w --x64 -p=never",
        "dist-win": "build -w --x64 --ia32 -p=never",
        "dist-linux": "build -l --x64 -p=never",
        "dist-mac": "build -m --x64 -p=never",
        "pack-mac": "build --dir -m -p=never",
        "start": "electron ."
    },
    "devDependencies": {
        "electron": "^1.8.3",
        "electron-builder": "^19.55.0"
    },
    "dependencies": {}
}
